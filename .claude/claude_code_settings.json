{
  "workingDirectories": [
    "C:\\Users\\josep\\Documents\\dotfiles",
    "C:\\Users\\josep\\Documents\\docs",
    "C:\\Users\\josep\\Documents\\nixos-config",
    "C:\\Users\\josep\\Documents\\bookmark-cleaner"
  ],
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "env": {
    "EDITOR": "code",
    "BROWSER": "msedge"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "LS",
      "Glob",
      "Grep"
    ],
    "ask": [
      "WebFetch",
      "WebSearch"
