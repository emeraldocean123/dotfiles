    },
    "PostToolUse": {
      "Bash": "echo 'Command completed with exit code: $CLAUDE_TOOL_EXIT_CODE'"
    }
  },
  "statusLine": {
    "type": "command",
    "command": "powershell -ExecutionPolicy Bypass -File C:\\Users\\josep\\Documents\\dotfiles\\.claude\\statusline.ps1"
  }
