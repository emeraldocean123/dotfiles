{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Verify Dotfiles (All)",
      "type": "shell",
      "command": "pwsh -NoProfile -File scripts/verify-dotfiles.ps1",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Verify PowerShell Profile",
      "type": "shell",
      "command": "pwsh -NoProfile -File powershell/Verify-Profile.ps1",
  "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Validate OMP Theme (Windows)",
      "type": "shell",
      "command": "pwsh -NoProfile -File scripts/check-theme.ps1",
  "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Validate OMP Theme (Linux)",
      "type": "shell",
      "command": "bash scripts/check-theme.sh",
  "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Verify Dotfiles (Linux)",
      "type": "shell",
      "command": "bash scripts/verify-dotfiles.sh",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Lint PowerShell (PSScriptAnalyzer)",
      "type": "shell",
      "command": "pwsh -NoProfile -File scripts/lint-powershell.ps1 -ExcludeVendored -CI",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": [
        {
          "owner": "pssa",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.+?):(\\d+):(\\d+): (error|warning|info) ([^:]+): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        }
      ]
    },
    {
      "label": "Lint PowerShell (baseline)",
      "type": "shell",
      "command": "pwsh -NoProfile -File scripts/lint-powershell.ps1 -ExcludeVendored -NoSettings -CI",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": [
        {
          "owner": "pssa",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.+?):(\\d+):(\\d+): (error|warning|info) ([^:]+): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        }
      ]
    },
    {
      "label": "Lint PowerShell (CI format)",
      "type": "shell",
      "command": "pwsh -NoProfile -File scripts/lint-powershell.ps1 -ExcludeVendored -CI",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": [
        {
          "owner": "pssa",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.+?):(\\d+):(\\d+): (error|warning|info) ([^:]+): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        }
      ]
    }
  ]
}
